<html>

<head>
    <title>Login</title>
    <link rel="stylesheet" href="/public/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light mb-5">
        <div class="container-xl">
            <a class="navbar-brand" href="/">
                <img src="/public/assets/logo-dumbways.png" alt="logo" style="width:49px; height:33px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link fw-bold" aria-current="page" href="/">Home</a>
                    </li>
                    {{#if isLogin}}
                    <li class="nav-item">
                        <a class="nav-link fw-bold" aria-current="page" href="/add-project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                <a class="text-decoration-none py-1 pe-4 text-dark" href="/register">Register</a>
                <a class="text-decoration-none py-1 pe-4 text-dark fw-bold" href="/login">Login</a>
                <a class="btn btn-dark text-white py-1 rounded-3" href="/contact-me">Contact Me</a>
            </div>
        </div>
    </nav>

    <!-- LOGIN CONTAINER -->
    <div class="container container-form">
        <p class="h2 fw-bold text-center">LOGIN TO YOUR ACCOUNT</p>

        {{!-- ALERT DANGER --}}
        {{#if messages.danger}}
        <div class="alert alert-danger w-50 mx-auto" role="alert">
            {{messages.danger}}
        </div>
        {{/if}}
        {{!-- ALERT SUCCESS --}}
        {{#if messages.success}}
        <div class="alert alert-success w-50 mx-auto" role="alert">
            {{messages.success}}
        </div>
        {{/if}}

        <form action="/login" method="post" class="mt-4 w-50 mx-auto">
            <!-- Email -->
            <div class="mb-3">
                <label for="inputEmail" class="form-label fw-bold fs-5 mb-1">Email</label>
                <input type="email" class="form-control shadow rounded" id="inputEmail" name="inputEmail" required>
            </div>
            <!-- Password -->
            <div class="mb-3">
                <label for="inputPassword" class="form-label fw-bold fs-5 mb-1">Password</label>
                <input type="password" class="form-control shadow rounded" id="inputPassword" name="inputPassword"
                    required>
            </div>
            <a class=" py-1 rounded-3" href="/register">Don't have an account? Register</a>
            <!-- Submit -->
            <div class="mt-3 d-flex justify-content-end">
                <button type="submit" class="btn text-white bg-dark rounded-pill px-4 py-1 fw-bold">Login</button>
            </div>
        </form>
    </div>

</body>

</html>